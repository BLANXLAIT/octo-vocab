# Octo Vocab Screenshot Configuration

# App Store accepted screenshot device sizes (based on Apple requirements)
devices([
  "iPhone 15 Pro Max",    # 6.7" Display - Accepted by App Store
  "iPhone SE (3rd generation)", # 4.7" Display - Accepted by App Store  
  "iPad Pro (12.9-inch) (6th generation)" # 12.9" Display - Accepted by App Store
])

# Languages supported by the app
languages([
  "en-US"  # English - United States
])

# UI Test scheme name - use the main Runner scheme which includes UI tests
scheme("Runner")

# Output directory for generated screenshots
output_directory("./fastlane/screenshots")

# Clear previous screenshots to ensure fresh captures
clear_previous_screenshots(true)

# Clean status bar for professional appearance
override_status_bar(true)

# Launch arguments for consistent screenshot environment
launch_arguments([
  "-snapshot_mode", "true",     # Enable screenshot mode
  "-disable_animations", "true" # Disable animations for consistency
])

# Arguments to pass to the app on launch. See https://docs.fastlane.tools/actions/snapshot/#launch-arguments
# launch_arguments(["-favColor red"])

# For more information about all available options run
# fastlane action snapshot
